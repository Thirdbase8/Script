local autoSmeltEnabled = true

-- Function to smelt items
local function smeltItem(item)
    -- Define what should happen when the item is smelted
    -- Example: Remove the item or alter its properties
    if item and item.Parent then
        item:Destroy()  -- Example: Destroy the item to simulate smelting
        print(item.Name .. " has been smelted!")
    end
end

-- Main loop for auto smelting
while autoSmeltEnabled do
    -- Get all items in the Backpack of the LocalPlayer
    local backpack = game.Players.LocalPlayer.Backpack:GetChildren()

    -- Equip all tools from the Backpack (make sure it's a Tool)
    for _, item in ipairs(backpack) do
        if item:IsA("Tool") then
            -- Move the tool to the character to equip it
            item.Parent = game.Players.LocalPlayer.Character or game.Players.LocalPlayer.CharacterAdded:Wait()
            print("Equipped " .. item.Name)
        end
    end

    -- Now, smelt all tools equipped on the character
    local characterItems = game.Players.LocalPlayer.Character:GetChildren()
    for _, item in ipairs(characterItems) do
        if item:IsA("Tool") then
            smeltItem(item)
        end
    end

    -- Wait for 5 seconds before checking again
    task.wait(5)
end
